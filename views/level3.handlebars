
<h1>level3</h1>
<h1>One Stop!</h1>

<div class="store-front">
<h2>Shopping for Goods</h2>

<ul>
{{#each shop}}
	{{#unless this.backpack}}
	<li>
	<p> {{this.id}}. {{this.item_name}}

	<form action="/{{this.id}}?_method=PUT" method="POST">
	<input type="hidden" name="backpack" value="true">
	<button id="buy-btn" type="submit">Backpack</button>
	</form>
	</p>
	</li>
	{{/unless}}
{{/each}}
</ul>
</div>

<h2>these items are yours</h2>

<ul>
  {{#each shop}}
    {{#if this.backpack}}
     <li>
       {{this.item_name}}

       <form action="/{{this.id}}?_method=PUT" method="POST">
       	<input type="hidden" name="backpack" value="false"><button id="sell-btn" type="submit">Give back</button>
       </form>
       </li>
       {{/if}}
       {{/each}}
 </ul>

<h2>What should be in the store?</h2>

<div>
<form action="/" method="POST">
    <textarea type="text" name="item_name">
  </textarea>
  {{!-- <input type="hidden" name="backpack" value="false"> --}}
<button id="add-item" type="submit">gimme items, user </button>
</form>
</div>

